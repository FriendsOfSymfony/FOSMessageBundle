<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="fos_message.message_meta_class">%fos_message.message_class%Metadata</parameter>
        <parameter key="fos_message.thread_meta_class">%fos_message.thread_class%Metadata</parameter>
        <parameter key="fos_message.new_thread_builder_class">FOS\MessageBundle\MessageBuilder\Orm\NewThreadBuilder</parameter>
        <parameter key="fos_message.reply_builder_class">FOS\MessageBundle\MessageBuilder\Orm\ReplyBuilder</parameter>

    </parameters>


    <services>

        <service id="fos_message.message_manager.default" class="FOS\MessageBundle\EntityManager\MessageManager" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%fos_message.message_class%</argument>
            <argument>%fos_message.message_meta_class%</argument>
        </service>

        <service id="fos_message.thread_manager.default" class="FOS\MessageBundle\EntityManager\ThreadManager" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%fos_message.thread_class%</argument>
            <argument>%fos_message.thread_meta_class%</argument>
            <argument type="service" id="fos_message.message_manager" />
        </service>

        <service id="fos_message.actions_manager" class="FOS\MessageBundle\EntityManager\ActionsManager" public="false">
            <argument type="service" id="fos_message.message_manager" />
            <argument type="service" id="fos_message.thread_manager" />
        </service>

        <service id="fos_message.new_thread_builder" class="%fos_message.new_thread_builder_class%" parent="fos_message.abstract_message_builder" />

        <service id="fos_message.reply_builder" class="%fos_message.reply_builder_class%" parent="fos_message.abstract_message_builder" />

        <service id="fos_message.abstract_message_builder" class="FOS\MessageBundle\MessageBuilder\Orm\AbstractMessageBuilder" abstract="true">
            <call method="setMessageClass">
                <argument>%fos_message.message_class%</argument>
            </call>
            <call method="setMessageMetaClass">
                <argument>%fos_message.message_meta_class%</argument>
            </call>
            <call method="setThreadClass">
                <argument>%fos_message.thread_class%</argument>
            </call>
            <call method="setThreadMetaClass">
                <argument>%fos_message.thread_meta_class%</argument>
            </call>
        </service>

    </services>

</container>
