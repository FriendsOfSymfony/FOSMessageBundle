<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ornicar_message.model.composition.class">Bundle\Ornicar\MessageBundle\Model\Composition</parameter>
        <parameter key="ornicar_message.model.answer.class">Bundle\Ornicar\MessageBundle\Model\Answer</parameter>
    </parameters>

    <services>
        <service id="ornicar_message.model.factory" class="Bundle\Ornicar\MessageBundle\Model\Factory">
            <argument type="service" id="fos_user.user_manager" />
            <argument type="service" id="ornicar_message.repository.message" />
            <argument>%ornicar_message.model.composition.class%</argument>
            <argument>%ornicar_message.model.answer.class%</argument>
        </service>

        <!-- Message Repository Service -->
        <service id="ornicar_message.repository.message" class="Bundle\Ornicar\MessageBundle\Document\MessageRepository" factory-service="doctrine.odm.mongodb.document_manager" factory-method="getRepository">
            <argument>%ornicar_message.model.message.class%</argument>
        </service>
    </services>

</container>
